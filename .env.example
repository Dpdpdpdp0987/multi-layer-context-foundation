# Multi-Layer Context Foundation Configuration

# Application
APP_NAME=Multi-Layer Context Foundation
VERSION=0.1.0
DEBUG=true

# Vector Database
VECTOR_DB_PROVIDER=qdrant
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=6333
VECTOR_DB_COLLECTION=mlcf_vectors

# Graph Database
GRAPH_DB_PROVIDER=neo4j
GRAPH_DB_URI=bolt://localhost:7687
GRAPH_DB_USER=neo4j
GRAPH_DB_PASSWORD=password

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# Memory Configuration
SHORT_TERM_MAX_SIZE=10
WORKING_MEMORY_MAX_SIZE=50
RELEVANCE_THRESHOLD=0.7

# Retrieval Configuration
RETRIEVAL_STRATEGY=hybrid
SEMANTIC_WEIGHT=0.5
KEYWORD_WEIGHT=0.3
GRAPH_WEIGHT=0.2
RERAN KING_ENABLED=true
RERANKING_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# MCP Server
MCP_PORT=3000
MCP_HOST=0.0.0.0

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mlcf.log

# Security
API_KEY=your-secret-api-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000