# Multi-Layer Context Foundation API Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# Authentication (set REQUIRE_AUTH=true in production)
REQUIRE_AUTH=false
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Vector Search
ENABLE_VECTOR_SEARCH=true
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=mlcf_api_vectors

# Graph Search
ENABLE_GRAPH_SEARCH=true
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Context Settings
IMMEDIATE_BUFFER_SIZE=10
IMMEDIATE_BUFFER_TTL=3600
SESSION_MAX_SIZE=50
MAX_CONTEXT_TOKENS=4096

# Cache Settings
ENABLE_CACHING=true
CACHE_TTL=300

# Logging
LOG_LEVEL=INFO

# Request Limits
MAX_REQUEST_SIZE=1048576
MAX_QUERY_LENGTH=1000
MAX_BATCH_SIZE=100

# Timeouts
REQUEST_TIMEOUT=30